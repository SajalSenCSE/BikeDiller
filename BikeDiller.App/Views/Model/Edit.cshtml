@model BikeDiller.App.Models.ModelModels.ModelEditVM



<br />
<h2 class="text-info">Add new Model</h2>

<form method="post" asp-action="Edit">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="@Model.Makes"></label>
        </div>
        <div class="col-4">
            <select class="form-control" id="SelectCAtList" asp-for="@Model.MakeId" asp-items="@(new SelectList(Model.Makes,"Id","Name"))">
                <option vlaue=""> ----Select Make---</option>
            </select>
            <span asp-validation-for="MakeId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name"></label>

        </div>
        <div class="col-4">
            <input class="form-control" asp-for="Name" />
            <input type="hidden" asp-for="Id" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn  btn-primary" value="Update" />
            <a class="btn btn-success" asp-action="List">Back</a>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
